<table class="table table-hover table-inverse">
  <thead>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <% if users.exists? %>
    </tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to "Show",user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</table>