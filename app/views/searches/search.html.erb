<h2>
  <% if @range == "User" %>
  Users search for <%= "#{word}" %>
  <% else %>
  Books search for <%= "#{word}" %>
</h2>

<div class="container">
  <div class="row">
    <table class="table table-hover table-inverse">
      <% if @range == "User" %>
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <tbody>
          <%= @book.each do |book| %>
            <tr>
              <td><%= image_tag book.get_profile_image(100,100) %></td>
              <td><%= book.title %></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
